<body>

    <!-- navbar section -->
    <%- include('./partials/nav.ejs') %>

    <!-- sign-in form section -->
    <section class="sign_in">
        <div class="container py-5" >
            <h1 class="text-center py-3">Please Sign In</h1>

            <%- include('./partials/loginMsg.ejs') %>
            
            <form action="/login" method="POST">
                <div class="mb-3 email">
                    <input type="email" class="form-control" id="email" name="email"
                        placeholder="Your Email" value=" <%= typeof email !='undefined'? email :'' %>">
                </div>
                <div class="mb-3 password">
                    <input type="text" class="form-control" id="password" name="password"
                    placeholder="Password" value="<%= typeof password !='undefined'? password :'' %>" >
                </div>
                <a href="/login"  style="text-decoration: none;"><button class="sign-btn" type="submit">LOGIN </button> </a>
            </form>
            <div class="register-link d-flex justify-content-center">
             <p style="font-size: 1.2rem;">Don't have an account?  <a href="/register">Create One </a> </p>  
            </div>
        </div>
    </section>

      <!-- footer section -->
      <%- include('./partials/footer.ejs') %>
    

